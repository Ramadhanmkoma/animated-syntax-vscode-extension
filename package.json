{
  "name": "animated-syntax",
  "displayName": "Animated Syntax",
  "description": "Beautiful animated syntax highlighting with language-specific keywords, glow effects, and customizable animations",
  "version": "0.0.1",
  "publisher": "Ramadhanmkoma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ramadhanmkoma/animated-syntax.git"
  },
  "bugs": {
    "url": "https://github.com/Ramadhanmkoma/animated-syntax/issues"
  },
  "homepage": "https://github.com/Ramadhanmkoma/animated-syntax#readme",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "animated-syntax.toggle",
        "title": "Toggle Animated Syntax Highlighting",
        "category": "Animated Syntax"
      },
      {
        "command": "animated-syntax.customizeKeywords",
        "title": "Customize Keywords",
        "category": "Animated Syntax"
      },
      {
        "command": "animated-syntax.adjustSpeed",
        "title": "Adjust Animation Speed",
        "category": "Animated Syntax"
      },
      {
        "command": "animated-syntax.demo",
        "title": "Show Demo",
        "category": "Animated Syntax"
      },
      {
        "command": "animated-syntax.toggleLanguageSpecific",
        "title": "Toggle Language-Specific Keywords",
        "category": "Animated Syntax"
      },
      {
        "command": "animated-syntax.toggleEffects",
        "title": "Toggle Visual Effects",
        "category": "Animated Syntax"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
